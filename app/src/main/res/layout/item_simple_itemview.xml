<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/songBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:ellipsize="marquee"
        android:gravity="left|center_vertical"
        android:marqueeRepeatLimit="1"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:text=" This is a sample title g qQ j"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textIsSelectable="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bitrate_text"
        app:layout_constraintEnd_toStartOf="@+id/length_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/length_text"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:text="23:59:59"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/bitrate_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_text" />

    <TextView
        android:id="@+id/bitrate_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:text="320 kbps"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/length_text"
        app:layout_constraintStart_toEndOf="@+id/title_text"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <TextView
        android:id="@+id/artist_text"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:ellipsize="marquee"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:text="An Artist ft. Some Other Artist"
        app:layout_constraintBottom_toBottomOf="@+id/bitrate_text"
        app:layout_constraintEnd_toStartOf="@+id/bitrate_text"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/title_text"
        app:layout_constraintTop_toTopOf="@+id/bitrate_text"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>